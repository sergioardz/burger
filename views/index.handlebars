<div>
    <img src="/assets/images/IMG_1938.jpg" height="90px" width="90px" alt="" />
    <h1>Eat-Da-Burger!</h1>
</div>
<div>
    <h3>Burgers List to Devour</h3>
    {{#each burgers}}
    {{#unless devoured}}
    <div id="open">
        <p>
            {{id}}. {{burger_name}}
            <button class="change-devoured" data-id="{{id}}">Devour it!</button>
        </p>
    </div>
    {{/unless}}
    {{/each}}
</div>
<div>
    <h3>Burgers already Devoured</h3>
    {{#each burgers}}
    {{#if devoured}}
    <div id="close">
        <p>
            {{id}}. {{burger_name}}
        </p>
    </div>
    {{/if}}
    {{/each}}
</div>
<form class="create-form">

    <div class="form-group">
        <input placeholder="Bring in a new one!" type="text" id="burger" name="burger_name" maxlength="255"
            style="height:40px;width:200px;">
    </div>

    <button type="submit">Submit</button>
    <p>Enter a Burger you'd like to eat. Then click the "Submit" button.</p>
</form>